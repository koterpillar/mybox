{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:recommended",
    ":automergeMinor",
    "github>koterpillar/renovate-haskell:default.json5",
  ],
  rangeStrategy: "bump",
  ignoreDeps: ["python"],
  customManagers: [
    {
      customType: "regex",
      managerFilePatterns: [".github/workflows/build.yml"],
      matchStrings: ["--package (?<depName>[^@]+)@(?<currentValue>\\d+)"],
      datasourceTemplate: "npm",
      extractVersionTemplate: "^(?<version>v\\d+)",
    },
  ],
  packageRules: [
    {
      matchPackageNames: ["node"],
      versioning: "docker",
    },
    {
      matchDepNames: ["python"],
      matchUpdateTypes: ["patch"],
      enabled: false,
    },
  ],
}
