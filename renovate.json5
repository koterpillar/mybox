{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:recommended",
    ":automergeMinor",
    "github>koterpillar/renovate-haskell:default.json5",
  ],
  rangeStrategy: "bump",
  ignoreDeps: ["python"],
  customManagers: [
    {
      customType: "regex",
      managerFilePatterns: [".github/workflows/*.y*ml"],
      matchStrings: ["--package (?<depName>@?[^@]+)@(?<currentValue>\\d+)"],
      datasourceTemplate: "npm",
    },
  ],
  packageRules: [
    {
      matchPackageNames: ["actions/node-versions"],
      extractVersion: "^(?<version>v\\d+)",
    },
    {
      matchDepNames: ["python"],
      matchUpdateTypes: ["patch"],
      enabled: false,
    },
  ],
}
