{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:recommended",
    ":automergeMinor",
    "github>koterpillar/renovate-haskell:default.json5",
  ],
  rangeStrategy: "bump",
  customManagers: [
    {
      customType: "regex",
      managerFilePatterns: [".github/workflows/*.y*ml"],
      matchStrings: ["--package (?<depName>@?[^@]+)@(?<currentValue>\\d+)"],
      datasourceTemplate: "npm",
    },
    {
      customType: "regex",
      managerFilePatterns: ["**/*.hs"],
      matchStrings: [
        '= *"(?<currentValue>[0-9.]+)" *-- renovate: datasource=(?<datasource>.+?) depName=(?<depName>.+?)( versioning=(?<versioning>.+?))?(\\s|$)',
      ],
      versioningTemplate: "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}",
    },
  ],
  packageRules: [
    {
      matchPackageNames: ["actions/node-versions"],
      extractVersion: "^(?<version>v\\d+)",
    },
  ],
}
